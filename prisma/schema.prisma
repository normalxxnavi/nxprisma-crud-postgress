datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") 
}


model Articulo {
  id          Int       @id @default(autoincrement())
  nombre      String
  descripcion String?
  precio      Decimal? 
  createdAt   DateTime  @default(now()) 
  updatedAt   DateTime  @updatedAt
  proveedores Proveedor[]

  @@map("articulos")
}

model Proveedor {
  id          Int       @id @default(autoincrement())
  nombre      String
  nacional    Boolean?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articulos   Articulo[]

  @@map("proveedores")
}
